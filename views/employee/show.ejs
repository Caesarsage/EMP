<% layout('layout/boilerplate') %>

<div class="container-fluid">
  <div class="row mt-5">
    <div class="col-md-3">
      <div class="list-group">
        <div class="list-group-item active">
          Employee Data
          <a href="" class="list-group-item">Add Employee</a>
          <a href="" class="list-group-item">View all Employee</a>
        </div>
      </div>
    </div>
    <div class="col-md-9">
      <table class="table table-striped table-hover bg-light">
        <tr class="table-dark">
          <th>ID</th>
          <th>Full Name</th>
          <th>Email</th>
          <th>Details</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
        <% for(let emp of employees){ %>
        <tr>
          <td><%= emp._id %> </td>
          <td><%= emp.firstName %> <%= emp.lastName %> </td>
          <td><%= emp.email %> </td>
          <td><a href="" class="btn btn-info btn-block btn-sm">Details</a></td>
          <td><a href="" class="btn btn-warning btn-block btn-sm">Edit</a></td>
          <td><a href="" class="btn btn-danger btn-block btn-sm">Delete</a></td>
        </tr>
        <% } %>
      </table>
    </div>
  </div>
</div>