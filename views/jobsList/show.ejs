<% layout('layout/boilerplate') %>

<div class="container-fluid">
  <div class="row mt-5">
    <div class="col-md-3 mb-3">
      <div class="list-group">
        <div class="list-group-item active">Job Data</div>
          <a href="" class="list-group-item" data-toggle="modal" data-target="#employee_modal">Add New Jobs</a>
          <a href="" class="list-group-item">View all Jobs</a>
      </div>
    </div>

    <div class="col-md-9">
      <div class="table-responsive">
        <table class="table table-striped table-hover bg-light">     
          <tr class="table-dark">
            <th>ID</th>
            <th>Job Name</th>
            <th>Description</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
          <% for(let job of jobs){ %>
          <tr>
            <td></td>
            <td><%= job.name %>  </td>
            <td><a href="" data-toggle="modal" data-target="#jobDetails<%=job._id%>" class="btn btn-info btn-block btn-sm">Details</a></td>
            <td><a href="" data-toggle="modal" data-target="#jobEdit<%=job._id%>" class="btn btn-warning btn-block btn-sm">Edit</a></td>
            <form action="/admin/jobs/<%=job._id%>?_method=DELETE" method="POST">
              <td>
                <button class="btn btn-danger btn-block btn-sm" onclick="alert('Are you sure of this action?')">Delete</button>
              </td>
            </form>
          </tr>
          <% } %>
        </table>
      </div>
    </div>
  </div>
</div>

